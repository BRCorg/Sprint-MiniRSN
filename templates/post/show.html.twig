{% extends 'base.html.twig' %}

{% block title %}{{ post.content|slice(0, 50) }}... - Mini RSN{% endblock %}

{% block body %}
{{ include('partials/_navbar.html.twig') }}

<div class="container mx-auto max-w-4xl px-4 py-8">
    <!-- Bouton retour -->
    <div class="mb-6">
        <a href="{{ path('post_index') }}" 
           class="inline-flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Retour au feed
        </a>
    </div>

    <!-- Messages flash -->
    {{ include('partials/_flash_messages.html.twig') }}

    <!-- Post complet -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-8">
        <!-- Header du post -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <!-- Avatar utilisateur -->
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold">
                        {% if post.user.name %}
                            {{ post.user.name|first|upper }}
                        {% else %}
                            {{ post.user.email|first|upper }}
                        {% endif %}
                    </div>
                    <div class="ml-4">
                        <p class="font-medium text-gray-900 dark:text-white">
                            {% if post.user.name %}
                                {{ post.user.name }}
                            {% else %}
                                {{ post.user.email|split('@')[0] }}
                            {% endif %}
                        </p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ post.createdAt|date('d/m/Y à H:i') }}
                            {% if post.updatedAt %}
                                <span class="text-gray-400">• modifié le {{ post.updatedAt|date('d/m/Y à H:i') }}</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
                
                <!-- Actions si propriétaire -->
                {% if app.user == post.user %}
                    <div class="flex space-x-3">
                        <a href="{{ path('post_edit', {id: post.id}) }}" 
                           class="bg-blue-100 hover:bg-blue-200 text-blue-800 px-3 py-1 rounded-full text-sm font-medium transition-colors">
                            Modifier
                        </a>
                        <form method="post" action="{{ path('post_delete', {id: post.id}) }}" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" 
                                    class="bg-red-100 hover:bg-red-200 text-red-800 px-3 py-1 rounded-full text-sm font-medium transition-colors"
                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')">
                                Supprimer
                            </button>
                        </form>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Contenu du post -->
        <div class="p-6">
            <div class="prose prose-lg max-w-none dark:prose-invert">
                <p class="text-gray-800 dark:text-gray-200 whitespace-pre-line leading-relaxed">{{ post.content }}</p>
            </div>
            
            {% if post.image %}
                <div class="mt-6">
                    <img src="{{ asset('uploads/posts/' ~ post.image) }}" 
                         alt="Image du post" 
                         class="w-full max-h-96 object-cover rounded-lg shadow-sm">
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Section Commentaires -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white flex items-center">
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                Commentaires ({{ post.comments|length }})
            </h2>
        </div>

        <!-- Liste des commentaires -->
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
            {% if post.comments is empty %}
                <div class="p-6 text-center">
                    <div class="text-gray-400 dark:text-gray-500 mb-4">
                        <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                    </div>
                    <p class="text-gray-500 dark:text-gray-400">Aucun commentaire pour le moment.</p>
                    <p class="text-sm text-gray-400 dark:text-gray-500 mt-2">Soyez le premier à commenter !</p>
                </div>
            {% else %}
                {% for comment in post.comments %}
                    {{ include('comment/_comment.html.twig', {'comment': comment}) }}
                {% endfor %}
            {% endif %}
        </div>

        <!-- Formulaire ajout commentaire -->
        <div class="p-6 bg-gray-50 dark:bg-gray-700">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Ajouter un commentaire</h3>
            {{ include('comment/_comment_form.html.twig', {'post': post}) }}
        </div>
    </div>
</div>
{% endblock %}