<!-- Post Card Component -->
<article class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
    <!-- Header du post -->
    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <!-- Avatar utilisateur -->
                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                    {% if post.user.name %}
                        {{ post.user.name|first|upper }}
                    {% else %}
                        {{ post.user.email|first|upper }}
                    {% endif %}
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                        {% if post.user.name %}
                            {{ post.user.name }}
                        {% else %}
                            {{ post.user.email|split('@')[0] }}
                        {% endif %}
                    </p>
                    <p class="text-xs text-gray-500 dark:text-gray-400">
                        {{ post.createdAt|date('d/m/Y à H:i') }}
                        {% if post.updatedAt %}
                            <span class="text-gray-400">• modifié</span>
                        {% endif %}
                    </p>
                </div>
            </div>
            
            <!-- Menu actions si propriétaire -->
            {% if app.user == post.user %}
                <div class="flex space-x-2">
                    <a href="{{ path('post_edit', {id: post.id}) }}"
                       class="inline-flex items-center px-3 py-1 bg-blue-50 hover:bg-blue-100 dark:bg-blue-900 dark:hover:bg-blue-800 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-lg transition-colors">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Modifier
                    </a>
                    <form method="post" action="{{ path('post_delete', {id: post.id}) }}" class="inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                        <button type="submit"
                                class="inline-flex items-center px-3 py-1 bg-red-50 hover:bg-red-100 dark:bg-red-900 dark:hover:bg-red-800 text-red-700 dark:text-red-300 text-sm font-medium rounded-lg transition-colors"
                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            Supprimer
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Contenu du post -->
    <div class="p-4">
        <p class="text-gray-800 dark:text-gray-200 whitespace-pre-line mb-4">{{ post.content }}</p>
        
        {% if post.image %}
            <div class="mb-4 -mx-4">
                <img src="{{ asset('uploads/posts/' ~ post.image) }}"
                     alt="Image du post"
                     class="w-full h-64 sm:h-96 object-cover hover:scale-105 transition-transform duration-300 cursor-pointer">
            </div>
        {% endif %}
    </div>
    
    <!-- Footer avec actions -->
    <div class="px-4 py-3 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-750 border-t border-gray-200 dark:border-gray-600">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-6">
                <!-- Compteur commentaires -->
                <div class="flex items-center text-gray-600 dark:text-gray-400">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                    </svg>
                    <span class="text-sm font-medium">{{ post.comments|length }}</span>
                </div>
            </div>

            <!-- Bouton voir détail -->
            <a href="{{ path('post_show', {id: post.id}) }}"
               class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-all duration-200 shadow-sm hover:shadow-md">
                <span>Voir détail</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</article>