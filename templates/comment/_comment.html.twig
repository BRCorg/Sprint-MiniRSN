<!-- Comment Component -->
<div class="p-4 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
    <div class="flex items-start space-x-3">
        <!-- Avatar -->
        <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-blue-600 rounded-full flex items-center justify-center text-white font-semibold text-xs">
            {% if comment.user.name %}
                {{ comment.user.name|first|upper }}
            {% else %}
                {{ comment.user.email|first|upper }}
            {% endif %}
        </div>
        
        <div class="flex-1 min-w-0">
            <!-- Header -->
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                        {% if comment.user.name %}
                            {{ comment.user.name }}
                        {% else %}
                            {{ comment.user.email|split('@')[0] }}
                        {% endif %}
                    </p>
                    <p class="text-xs text-gray-500 dark:text-gray-400">
                        {{ comment.createdAt|date('d/m/Y à H:i') }}
                        {% if comment.updatedAt %}
                            <span class="text-gray-400">• modifié</span>
                        {% endif %}
                    </p>
                </div>
                
                <!-- Actions si propriétaire -->
                {% if app.user == comment.user or is_granted('ROLE_ADMIN') %}
                    <div class="flex space-x-2">
                        <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" 
                           class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-xs font-medium">
                            Modifier
                        </a>
                        <form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" 
                              class="inline" onsubmit="return confirm('Supprimer ce commentaire ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                            <button type="submit" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 text-xs font-medium">
                                Supprimer
                            </button>
                        </form>
                    </div>
                {% endif %}
            </div>
            
            <!-- Content -->
            <div class="mt-2">
                <p class="text-sm text-gray-800 dark:text-gray-200 whitespace-pre-line">{{ comment.text }}</p>
            </div>
        </div>
    </div>
</div>