{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Modifier le commentaire</h1>

            <!-- AperÃ§u du post -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Post :</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">{{ comment.post.content|slice(0, 150) }}...</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                <div>
                    {{ form_label(form.text, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    {{ form_widget(form.text) }}
                    {{ form_errors(form.text) }}
                </div>

                <div class="flex justify-between items-center">
                    {{ form_widget(form.submit, {'label': 'Modifier le commentaire'}) }}
                    <a href="{{ path('post_show', {'id': comment.post.id}) }}" 
                       class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}